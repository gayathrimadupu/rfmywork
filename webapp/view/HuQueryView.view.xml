<mvc:View 
controllerName="com.app.rfscreens.controller.HuQueryView"
xmlns:unified="sap.ui.unified"
   xmlns:mvc="sap.ui.core.mvc"
  
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
      xmlns:f="sap.ui.layout.form"
      xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:ndc="sap.ndc"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:vbm="sap.ui.vbm"
    xmlns:controls="sap.viz.ui5.controls"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:simple="sap.gantt.simple"
    xmlns:launchpad="sap.ushell.ui.launchpad"
 
    xmlns:uxap="sap.uxap"
    xmlns:form="sap.ui.layout.form"
    
    xmlns="sap.m"
   
    displayBlock="true"
    xmlns:tnt="sap.tnt">

    <Page
        showHeader="false"
        class="PageBackground">
        
        <tnt:ToolHeader
            id="shellLikeToolHeader"
            visible="true">

            <Title
                text="RF UI"
                wrapping="false"
                id="productName">
                <layoutData>
                    <OverflowToolbarLayoutData priority="Disappear" />
                </layoutData>
            </Title>

            <Text
                text="By Artihcus Global"
                wrapping="false"
                id="secondTitle">
                <layoutData>
                    <OverflowToolbarLayoutData priority="Disappear" />
                </layoutData>
            </Text>

            <ToolbarSpacer />

            <ToolbarSpacer id="spacer">
                <layoutData>
                    <OverflowToolbarLayoutData priority="Low" group="1" />
                </layoutData>
            </ToolbarSpacer>

            <ToolbarSeparator>
                <layoutData>
                    <OverflowToolbarLayoutData group="2" />
                </layoutData>
            </ToolbarSeparator>

            <tnt:ToolHeaderUtilitySeparator />

            <ToolbarSpacer width="1.125rem" />

            <Avatar
                id="myAvatar"
                src="test-resources/sap/tnt/images/Woman_avatar_01.png"
                displaySize="XS"
                press="onAvatarPressed"
                tooltip="Profile">
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                </layoutData>
            </Avatar>

        </tnt:ToolHeader>

        <content>
         
                  <Button id="_IDGenButton1122" icon="sap-icon://nav-back" press="Onpressback1"  visible="false" />
                  <Button id="_IDGenButton1111" icon="sap-icon://nav-back" press="Onpressback2"  visible="false"/>
                
                

            <IconTabBar
                expanded="true"
                id="IconTabBar">
                
                <items>
                    <IconTabFilter
                      id="icon1"
                    visible="true"
                        key="info"
                        text="Scanning HU">
                        <HBox>
                            <f:SimpleForm
                                id="simpleForm"
                                layout="ResponsiveGridLayout"
                                editable="true">
                                
                                <Label id="_IDGenLabel1" text="Scan HU" />
                                <HBox id="_IDGenHBox1">
                                    <Input id="_IDGenInput1" placeholder="Enter HU..." />
                                </HBox>
                                <Button id="_IDGenButton111" text="Submit" press="Onpresssubmit" />
                                <HBox id="_IDGenHBox555">
                                    <Button id="_IDGenButton11" icon="sap-icon://bar-code" press="Onpressscan" />
                                </HBox>

                            </f:SimpleForm>
                        </HBox>
                    </IconTabFilter>

                    <IconTabFilter
                      id="icon2"
                    visible="false"
                        key="info1"
                        text="Content">
                        <f:SimpleForm
                            id="simpleForm1"
                            layout="ResponsiveGridLayout"
                            editable="true">

                            <Label id="_IDGenLabel2" text="Scan HU" />
                            <HBox id="_IDGenHBox2">
                                <Input id="_IDGenInput2" placeholder="Enter HU..." />
                            </HBox>

                            <Label id="_IDGenLabel3" text="HU Type" />
                            <HBox id="_IDGenHBox3">
                                <Input id="_IDGenInput3" placeholder="Enter HU Type..." />
                            </HBox>

                            <Label id="_IDGenLabel4" text="Dimensions" />
                            <Label id="_IDGenLabel3i2" text="Length" />
                            <HBox id="_IDGenHBoxk">
                                <Input id="_IDGenInput3p3" placeholder="Enter Length..." />
                            </HBox>
                            <Label id="_IDGenLabe3i2" text="Width" />
                            <HBox id="_IDGenBoxk">
                                <Input id="_IDGenInut3p3" placeholder="Enter Width..." />
                            </HBox>
                            <Label id="_IDGenLabl3i2" text="Height" />
                            <HBox id="_IDGenHoxk">
                                <Input id="_IDGnInput3p3" placeholder="Enter Height..." />
                            </HBox>
                            <Label id="_IDGenLabel32" text="Weight" />
                            <HBox id="_IDGenHBox322">
                                <Input id="_IDGenInput333" placeholder="Enter Weight..." />
                            </HBox>
                            <Label id="_IDGenLabel322" text="Volume" />
                            <HBox id="_IDGenHBox3222">
                                <Input id="_IDGenInput33" placeholder="Enter Volume.." />
                            </HBox>
                            <Label id="_IDGenLabel112" text="Location" />
                            <HBox id="_IDGenHBox32212">
                                <Input id="_IDGenInput313" placeholder="Enter Location.." />
                            </HBox>

                            <HBox id="_IDGenHBox5">
                                <Button id="_IDGenButton1" text="HU Content" press="onHUContentPress" />
                                <Button id="_IDGenButton2" text="HU Hierarchy" press="onHUHierarchyPress" />
                            </HBox>

                        </f:SimpleForm>
                    </IconTabFilter>

                    <IconTabFilter
                    id="icon3"
                    visible="false"
                        key="info2"
                        text="Product List">
                        <Table
                            id="productTable"
                            inset="false"
                            items="{/productData}"
                            growing="true"
                            growingScrollToLoad="true"
                            mode="None">

                            <columns>
                                <Column id="_IDGenColumn1">
                                    <Text id="_IDGenText1" text="S.No" />
                                </Column>
                                <Column id="_IDGenColumn2">
                                    <Text id="_IDGenText2" text="Product" />
                                </Column>
                                <Column id="_IDGenColumn3">
                                    <Text id="_IDGenText3" text="Quantity" />
                                </Column>
                                <Column id="_IDGenColumn4">
                                    <Text id="_IDGenText4" text="UOM" />
                                </Column>
                                <Column id="_IDGenColumn5">
                                    <Text id="_IDGenText5" text="Product Description" />
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1">
                                    <cells>
                                        <Text id="_IDGenText6" text="{serialNo}" />
                                        <Text id="_IDGenText7" text="{product}" />
                                        <Text id="_IDGenText8" text="{quantity}" />
                                        <Text id="_IDGenText9" text="{uom}" />
                                        <Text id="_IDGenText10" text="{productDescription}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>

                    <IconTabFilter
                      id="icon4"
                    visible="false"
                        key="info3"
                        text="Hierarchy">
                        <Table
                            id="simpleTable"
                            inset="false"
                            items="{/tableData}"
                            growing="true"
                            growingScrollToLoad="true"
                            mode="None">

                            <columns>
                                <Column id="_IDGenColumn6">
                                    <header>
                                        <Label id="_IDGenLabel5" text="S.No" />
                                    </header>
                                </Column>
                                <Column id="_IDGenColumn7">
                                    <header>
                                        <Label id="_IDGenLabel6" text="Higher Level HU" />
                                    </header>
                                </Column>
                                <Column id="_IDGenColumn8">
                                    <header>
                                        <Label id="_IDGenLabel7" text="Highest Level HU" />
                                    </header>
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem id="_IDGenColumnListItem2">
                                    <cells>
                                        <Text id="_IDGenText11" text="{serialNo}" />
                                        <Text id="_IDGenText12" text="{higherLevelHU}" />
                                        <Text id="_IDGenText13" text="{highestLevelHU}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>

                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
